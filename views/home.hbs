<div
  class="container-fluid d-flex flex-column justify-content-center align-items-center h-75"
>
  <img
    src="./../images/pngfind.com-final-fantasy-png-838281.png"
    alt="FFXIV Logo"
    class="justify-content-center w-50"
  />
  <h1
    style="font-family:Georgia, Times New Roman"
    class="text-center"
  >{{title}}</h1>
  <form class="d-flex w-50 align-items-center" role="search" action="/search">
    <input
      class="shadow form-control me-2"
      type="search"
      placeholder="Search for items..."
      aria-label="Search"
      name="search"
      style="font-family:Georgia, Times New Roman"
    />
    <button class="shadow btn btn-outline-light" type="submit"><svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        fill="currentColor"
        class="shadow bi bi-search"
        viewBox="0 0 16 16"
      >
        <path
          d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"
        ></path>
      </svg></button>
  </form>
  <div>
    {{#if user}}
      {{#if recentSearches.length}}
        Recent searches:
        {{#each recentSearches}}
          <a class="link-warning" href="/search?search={{this}}">{{this}}</a>
          -
        {{/each}}
      {{/if}}
    {{/if}}
  </div>
</div>